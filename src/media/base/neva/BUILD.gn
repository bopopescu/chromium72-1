import("//neva/neva.gni")

# The list of deps from //media/base:base
# which is required by neva target.
# Also platform target should depend on this
group("neva_deps") {
  public_deps = [
    "//media:media_buildflags",
    "//skia",
    "//third_party/jsoncpp",
    "//third_party/libaom:av1_buildflags"
  ]
  public_configs = [ "//media:subcomponent_config" ]
}

source_set("neva") {
# This target is a part of //media/base:base
# So set visibility to only //media/base:base
  visibility = [ "//media/base" ]

  sources = [
    "media_constants.h",
    "media_platform_api.cc",
    "media_platform_api.h",
    "media_track_info.h",
    "media_type_restriction.h",
    "neva_mime_util_internal.h",
  ]

  deps = [
    ":neva_deps",
  ]

  if (is_webos) {
    deps += [ "//media/base/neva/webos" ]
  } else {
    sources += [
      "media_platform_api_stub.cc",
      "media_platform_api_stub.h",
      "neva_mime_util_internal_stub.cc",
    ]
  }
}
