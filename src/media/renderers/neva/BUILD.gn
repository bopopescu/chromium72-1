import("//neva/neva.gni")

# The list of deps from //media/renderers:renderers
# which is required by neva target.
# Also platform target should depend on this
group("neva_deps") {
  public_deps = [
    "//media:media_buildflags",
    "//skia",
    "//third_party/libaom:av1_buildflags"
  ]
  public_configs = [ "//media:subcomponent_config" ]
}

source_set("neva") {
# This target is a part of //media/renderers:renderers
# So set visibility to only //media/renderers:renderers
  visibility = [ "//media/renderers" ]

  sources = [
    "neva_media_player_renderer_factory.h",
    "neva_media_player_renderer_factory_stub.cc",
  ]

  deps = [ ":neva_deps" ]

  if (is_webos) {
    sources -= [
      "neva_media_player_renderer_factory_stub.cc",
    ]

    deps += [
      "//media/renderers/neva/webos"
    ]
  }
}
